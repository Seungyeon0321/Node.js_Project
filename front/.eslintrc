{
  "env": {
    "browser": true,  // Enables browser globals
    "es2021": true,  // Support modern ECMAScript features
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 14,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "plugins": [
    "import",
    "react-hooks"
  ]
}
